extends ../../layouts/default.pug

block main
  .container.user-list-container
    include ../../partials/list-btn-friend.pug
    
    h2.my-4.text-center.text-primary 💬 #{titlePage}

    div(data-users-not-friend=user._id)
      each user in users
        .user-card.d-flex.align-items-center.justify-content-between(user-id=user._id)
          .d-flex.align-items-center.gap-3
            img.avatar(
              alt="Avatar" 
              src=(user.avatar || "/client/uploads/default-user.jpg")
              )
            div
              .username #{user.fullName}
              .user-status.online Đang hoạt động
              .user-status.offline.inactive Ngoại tuyến
          div
            button.btn.btn-primary.btn-sm.btn-friend.me-2(button-add-friend=user._id) Kết bạn
            button.btn.btn-secondary.btn-sm.btn-friend.me-2.inactive(button-sended-friend) Đã gửi

block script 
  script(src="/client/js/users.js") 
extends ../../layouts/default.pug

block main 
  .chat-container
    .d-flex.justify-content-between.align-items-center.mb-4
      h4.mb-0.text-primary Danh sách phòng chat
      a.btn.btn-primary#create-room(href="/rooms-chat/create")
        i.bi.bi-plus-circle.me-1
        | Tạo phòng

    #room-list
      each room in rooms
        .chat-room
          .room-info
            if room.avatar
              img.room-avatar(src=room.avatar alt="avatar")
            else
              .room-avatar= room.title.charAt(0)
            strong #{room.title}
          a.btn.btn-outline-primary.btn-sm(href=`/chat/${room.id}`)
            i.bi.bi-chat-left-text.me-1
            | Chat ngay
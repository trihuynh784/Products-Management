doctype html
html 
  head 
    title #{titlePage}
    //- Bootstrap
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

    //- Font Awesome
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css")

    //- file-upload-with-preview
    link(rel="stylesheet", href="https://unpkg.com/file-upload-with-preview/dist/style.css")

    //- ViewersJS
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.min.css")

    link(rel="stylesheet", href="/client/css/style.css")

  body
    .wrapper
      include ../partials/header.pug

      .main
        block main 

      include ../partials/footer.pug

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js") 

    //- Bootstrap
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

    //- SocketIO
    script(src="/socket.io/socket.io.js")
    script(src="/client/js/socket.js") 

    //- file-upload-with-preview
    script(type="module" src="https://cdnjs.cloudflare.com/ajax/libs/file-upload-with-preview/6.1.2/index.min.js") 

    //- Emoji Picker
    script(type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js") 

    //- ViewersJS
    script(src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.min.js") 

    script(src="/client/js/script.js")

    block script
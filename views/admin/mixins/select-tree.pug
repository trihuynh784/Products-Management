mixin select-tree(records, level = 1, parentId = "")
  each item in records 
    - const prefix = Array(parseInt(level) + 1).join("-- ")
    option(
      value=item._id
      selected=(item._id == parentId)
    ) #{prefix}#{item.title}
      if item.children && item.children.length > 0
        +select-tree(item.children, level + 1, parentId)
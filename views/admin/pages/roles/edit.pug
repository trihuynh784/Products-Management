extends ../../layouts/default.pug

block main  
  h1.mb-4 Chỉnh sửa nhóm quyền 
  
  form(
    action=`${prefixAdmin}/roles/edit/${record._id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group mb-3")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required 
        value=record.title
      )
    div(class="form-group mb-3")
      label(for="description") Mô tả
      input(
        type="text"
        class="form-control"
        id="description"
        name="description"
        required 
        value=record.description
      )
    div(class="form-group mb-3")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
    